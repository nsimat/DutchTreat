@model LoginViewModel

@{
    ViewBag.Title = "Login";
}
@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}

<div class="row">
    <div class="col-md-4 offset-md-4">
        <form>
            <div class="form-group">
                <label asp-for="Username"><b>Username</b></label>
                <div class="input-group mb-3">
                    <span class="input-group-text">
                        <i class="fas fa-at"></i>
                    </span>
                    <input class="form-control" asp-for="Username" type="email" placeholder="Your email address" />
                </div>                
                <span class="text-warning" asp-validation-for="Username"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"><b>Password</b></label>
                <div class="input-group mb-3">
                    <span class="input-group-text">
                        <i class="fas fa-unlock-alt"></i>
                    </span>
                    <input class="form-control" asp-for="Password" type="password" placeholder="Your password" />
                </div>                
                <span class="text-warning" asp-validation-for="Password"></span>
            </div>
            <div class="form-group">
                <div class="form-check">
                    <input class="form-check-input" asp-for="RememberMe" type="checkbox" />
                    <label class="form-check-label" asp-for="RememberMe"><b>Remember Me?</b></label>
                </div>
                <span class="text-warning" asp-validation-for="RememberMe"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>